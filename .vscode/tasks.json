{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Monitor Cursor Instructions",
      "type": "shell",
      "command": "${workspaceFolder}/cursor-auto-opener.sh",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false
      },
      "runOptions": {
        "runOn": "folderOpen"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Bridge System",
      "type": "shell",
      "command": "bash",
      "args": ["${workspaceFolder}/start-bridge-with-notifier.sh"],
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": true,
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}